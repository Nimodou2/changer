<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:paddingTop="5dp"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:textColor="#0F87FF"
            android:textSize="18dp"
            android:gravity="center|left"
            android:text="返回"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_soild">
        <Button
            android:background="@drawable/shap_left_blue_bg"
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="计划表"/>

        <Button
            android:background="@drawable/white_soild_right"
            android:id="@+id/btn2"
            android:layout_margin="1dp"
            android:textColor="#2D2DFF"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="预约表"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_certain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:textColor="#0F87FF"
            android:textSize="18dp"
            android:gravity="center|right"
            android:text="确定"/>
    </LinearLayout>
    <ImageView
        android:layout_below="@+id/tab"
        android:id="@+id/iv_over"
        android:background="@color/weixin_lianxiren_gray"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="1dp">
    </ImageView>
    <android.support.v4.view.ViewPager
        android:paddingTop="3dp"
        android:layout_below="@+id/iv_over"
        android:id="@+id/vp_mywork"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</RelativeLayout>